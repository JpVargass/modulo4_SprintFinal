<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/paleta1"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewYearNumber"
        android:layout_width="315dp"
        android:layout_height="100dp"
        android:layout_marginTop="24dp"
        android:background="@color/paleta2_4"
        android:gravity="center"
        android:text="0"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/textViewAltamente"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/textViewYearText"
        app:layout_constraintVertical_bias="1.0"
        tools:textColor="@color/paleta4" />

    <TextView
        android:id="@+id/textViewMotivacion"
        android:layout_width="412dp"
        android:layout_height="119dp"
        android:background="@color/paleta2_5"
        android:gravity="center"
        android:text="Nivel de Motivación"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp"
        tools:textColor="@color/paleta4" />

    <TextView
        android:id="@+id/textViewAltamente"
        android:layout_width="318dp"
        android:layout_height="119dp"
        android:layout_marginStart="412dp"
        android:background="@color/paleta2_5"
        android:gravity="center"
        android:text="Altamente comprometido"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textViewMotivacion"
        tools:textColor="@color/paleta4" />

    <ImageButton
        android:id="@+id/imageBtn"
        android:layout_width="288dp"
        android:layout_height="194dp"
        android:backgroundTint="@color/paleta3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textViewYearText"
        android:layout_width="413dp"
        android:layout_height="100dp"
        android:background="@color/paleta2_4"
        android:gravity="center"
        android:text="Años de Experiencia"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/textViewMotivacion"
        app:layout_constraintEnd_toStartOf="@+id/textViewYearNumber"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:textColor="@color/paleta4" />


</androidx.constraintlayout.widget.ConstraintLayout>